{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "composite": true,
    "isolatedModules": true,
    "esModuleInterop": false,
    "noUncheckedIndexedAccess": true
  },
  "include": ["vite.config.ts", "vitest.config.ts", "playwright.config.ts", "plopfile.js"]
}